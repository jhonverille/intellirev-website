rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to CMS content
    match /services/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /projects/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /testimonials/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /faqs/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /inquiries/{document=**} {
      allow create: if true; // Public can send messages
      allow read, update, delete: if request.auth != null; // Only admin can view/manage
    }
    // Only allow admin access for other writes (simplistic check for now)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
