rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate inquiry data
    function isValidInquiry() {
      return request.resource.data.keys().hasAll(['name', 'email', 'message', 'status', 'createdAt'])
        && request.resource.data.name is string
        && request.resource.data.email is string
        && request.resource.data.message is string
        && request.resource.data.status == 'new'
        && request.resource.data.name.size() > 0
        && request.resource.data.email.matches('^[^@]+@[^@]+\\.[^@]+$')
        && request.resource.data.message.size() > 0
        && request.resource.data.message.size() <= 5000;
    }
    
    // Public read access to CMS content (optimized with single document match)
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Inquiries with validation
    match /inquiries/{inquiryId} {
      // Public can only create valid inquiries
      allow create: if isValidInquiry();
      // Only authenticated users can read/update/delete
      allow read: if isAuthenticated();
      // Allow authenticated users to update status field
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
